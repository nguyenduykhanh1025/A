{
  "plugins": {
    "@release-it/bumper": {
      "in": "versions/product-lib.json",
      "out": [
        "versions/product-lib.json",
        "dist/libs/product/package.json"
      ]
    }
  },
  "git": {
    "commitMessage": "chore(repo): release product ${version}",
    "tagName": "product-v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Release: common-ui ${version}",
    "tokenRef": "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"
  },
  "hooks": {
    "before:bump": "npx nx build product",
    "after:bump": [
      "git checkout -- package.json",
      "git checkout -- package-lock.json"
    ]
  }
}
